= form_for(@monument) do |f|
  - if @monument.errors.any?
    #error_explanation
      %h2
        = pluralize(@monument.errors.count, "error")
        prohibited this monument from being saved:
      %ul
        - @monument.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br
      = f.text_field :name
  .field
    = f.label :description
    %br
      = f.text_area :description
  .field
    = f.label :category
    %br
      = f.select :category_id, Category.all
  = link_to "Create New Category", new_category_path
  = hidden_field_tag 'collection_id', params[:collection_id]
  .actions
    = f.submit

