= form_for(@picture) do |f|
  - if @picture.errors.any?
    #error_explanation
      %h2
        = pluralize(@picture.errors.count, "error")
        prohibited this picture from being saved:
      %ul
        - @picture.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br
      = f.text_field :name
  .field
    = f.label :description
    %br
      = f.text_area :description
  .field
    = f.label :date
    %br
      = f.text_field :date
    = hidden_field_tag 'monument_id', params[:monument_id]
  .field
    = f.label :upload_photo
    %br/
    = f.file_field :photo
  .actions
    = f.submit